<p><%= flash[:message] if flash[:message] %></p>
  
<h1 class="headers">Log in</h1>


<div class="signup-login-review">
<%= form_for :user do |f| %>
<div class="input-group">
<%= f.label :email %>
<%= f.email_field :email %> <br>
<%= f.label :password %>
<%= f.password_field :password %> <br>
<%= f.submit "Log in", class: "submit-btn" %>
</div>
<% end %>
</div>
