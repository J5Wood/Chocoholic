<%= @chocolate.errors.full_messages.first if @chocolate.errors.any? %>

<%= form_for @chocolate do |f| %>
<%= f.label :brand %>
<%= f.text_field :brand %> <br>
<%= f.label :flavor %>
<%= f.text_field :flavor %> <br>
<% if @chocolate.image.attached? %>
<%= image_tag @chocolate.image, style: "width: 200px; display: block" %>
<% end %>
<%= f.label "Chocolate Image" %> <br>
<%= f.file_field :image %> <br>
<%= f.label :dairy_free, "Is this chocolate dairy free?" %>
<%= f.select :dairy_free, [["No", false], ["Yes", true]] %> <br>
<%= f.label :nut_free, "Is this chocolate nut free" %>
<%= f.select :nut_free, [["No", false], ["Yes", true]] %> <br>
<%= f.label :note, "any additional information you'd like to share?" %> <br>
<%= f.text_area :note, placeholder: "optional" %> <br>
<%= f.label :category, "Choose a Category" %>
<%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %><br> 
 
<%= f.fields_for :category do |cat_field| %>
create your own if no match found<%= cat_field.text_field :name, placeholder: "add category name" %> <br>
<% end %>

<%= f.submit %>
<% end %>