<%= @chocolate.errors.full_messages.first if @chocolate.errors.any? %>

<%= form_for @chocolate do |f| %>
<%= f.label :brand %>
<%= f.text_field :brand %> <br>
<%= f.label :flavor %>
<%= f.text_field :flavor %> <br>
<%= f.label "Chocolate Photo" %> <br>
<%= f.file_field :avatar %> <br>
<%= f.label :category, "Choose a Category" %> <br>
<%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %><br> 

<%= f.fields_for :category do |cat_field| %>
<%= cat_field.text_field :name, placeholder: "Or add your own category" %>
<% end %>

<%= f.collection_check_boxes :tasting_term_ids, TastingTerm.all, :id, :term %> <br>
<%= f.fields_for :tasting_terms do |term_field| %>
or add your own term <%= term_field.text_field :term %> <br> <br>
<% end %>
<%= f.submit %>
<% end %>