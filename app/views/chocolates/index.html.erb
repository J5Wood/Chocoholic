<%= render partial: 'layouts/search' %>
<div class="clearfix"></div>
<section class="choc-sec">
  <% if @category %>
    <p>
      <%= fa_icon "arrow-left" %><%= link_to "Back to Categories", categories_path %>
      <br class="break">
      <%= fa_icon "plus-square" %><%= link_to "Add to #{@category.name}", new_category_chocolate_path(@category) %>
    </p>
    <h2><%= @category.name %></h2>
    <% else %>
    <h2>All Chocolates</h2>
  <% end %>
  
  <%= render partial: 'chocolates', locals: {chocolates: @chocolates} %>
</section>
