  
<p><%= time_ago_in_words(review.created_at) %> ago by <%= link_to review.user.name, user_reviews_path(review.user) %> for <%= link_to review.chocolate.flavor, chocolate_path(review.chocolate) %></p>
<% review.rating.to_i.times do %>
  <%= fa_icon "star", class: "stars" %>
<% end %>
<p><%= review.comment %></p>
<% if review.user == current_user %>
  <%= link_to (fa_icon "trash" ), review, method: :delete, data: { confirm: "Are you sure?" } %>
  <%= link_to (fa_icon "edit" ), edit_review_path(review) %>
<% end %>
