<div class="form-box">
  <div class="input-group">
    <%= form_for ([@chocolate, @review]) do |f| %>
      <%= f.label :rating %>
      <%= f.number_field :rating %> <br>
      <%= f.label :comment %> <br>
      <%= f.text_area :comment, rows: 5 %> <br>
      <%= f.submit "Submit", class: "submit-btn" %>
    <% end %>
  </div>
</div>
