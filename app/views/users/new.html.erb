<h1 class="headers">Sign Up </h1>
<div class="signup-login-review">
<%= form_for @user do |f| %>
<div class="input-group">
<%= f.label :name %>
<%= f.text_field :name %> <br>
<%= f.label :email %>
<%= f.email_field :email %> <br>
<%= f.label :password %>
<%= f.password_field :password %><br>
<%= f.submit "Create Account", class: "submit-btn" %>
<% end %>
</div>
</div>